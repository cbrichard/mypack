{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "owner_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-1",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "*os_base",
      "root-device-type": "ebs"
      },
      "owners": "{{user `owner_id`}}",
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "cloudbase-{{isotime \"2006-01-02\"}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 10",
      "sudo apt-get update",
      "sudo apt-get upgrade -y"
    ]
  }]
}
